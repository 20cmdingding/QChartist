declare sub hideenergyform

CREATE energyform as qform

    Center
    Caption = "Settings for: energy"
    visible=0

    ' Put your indicator settings code here

    create energybtnok as qbutton
        left=0
        top=0
        caption="OK"
        onclick=hideenergyform
    end create

END CREATE

sub hideenergyform
    energyform.visible=0
end sub
